{
  "train_micro_batch_size_per_gpu":64,
  "gradient_accumulation_steps": 1,
  "steps_per_print": 10,
  "gradient_clipping": 0.1,
  "fp16": {
    "enabled": false
  },
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.00001,
      "betas": [
        0.9,
        0.95
      ],
      "eps": 1e-8,
      "weight_decay": 0
    }
  },
  "activation_checkpointing": {
    "partition_activations": false,
    "contiguous_memory_optimization": false
  },
  "wall_clock_breakdown": false
}
